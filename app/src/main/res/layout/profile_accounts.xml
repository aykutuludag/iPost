<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.percent.PercentRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/account_device"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            app:layout_heightPercent="33.3%"
            app:layout_widthPercent="50%"
            app:srcCompat="@drawable/device_calendar" />

        <com.facebook.login.widget.LoginButton
            android:id="@+id/account_facebook"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            app:layout_heightPercent="33.3%"
            app:layout_widthPercent="50%" />

        <TextView
            android:id="@+id/deviceSync"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/account_device"
            android:gravity="center"
            android:text="@string/account_synchronized"
            android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
            app:layout_heightPercent="5%"
            app:layout_marginLeftPercent="5%"
            app:layout_widthPercent="40%" />

        <TextView
            android:id="@+id/facebookSync"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/account_device"
            android:gravity="center"
            android:text="@string/account_not_synchronized"
            android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
            app:layout_heightPercent="5%"
            app:layout_marginRightPercent="5%"
            app:layout_widthPercent="40%" />
    </android.support.percent.PercentRelativeLayout>

</RelativeLayout>