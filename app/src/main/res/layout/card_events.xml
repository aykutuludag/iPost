<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="fill_parent"
        android:layout_height="150dp"
        card_view:cardBackgroundColor="#fff"
        card_view:cardUseCompatPadding="true">

        <RelativeLayout
            android:id="@+id/top_layout"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <ImageView
                android:id="@+id/img_background"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:adjustViewBounds="true"
                android:background="#00801e"
                android:scaleType="centerCrop" />

            <TextView
                android:id="@+id/txt_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:text="Remin's Birthday"
                android:textAppearance="@style/TextAppearance.AppCompat.Subhead.Inverse" />

            <TextView
                android:id="@+id/txt_startime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/imageView3"
                android:layout_below="@+id/txt_name"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"
                android:layout_toEndOf="@+id/imageView3"
                android:layout_toRightOf="@+id/imageView3"
                android:gravity="center"
                android:text="02:00"
                android:textAppearance="@style/TextAppearance.AppCompat.Small.Inverse" />

            <TextView
                android:id="@+id/txt_endtime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/txt_startime"
                android:layout_below="@+id/txt_name"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"
                android:layout_toEndOf="@+id/txt_startime"
                android:layout_toRightOf="@+id/txt_startime"
                android:gravity="center"
                android:text="06:00"
                android:textAppearance="@style/TextAppearance.AppCompat.Small.Inverse" />

            <TextView
                android:id="@+id/txt_loc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/txt_name"
                android:layout_alignLeft="@+id/txt_startime"
                android:layout_alignParentBottom="true"
                android:layout_alignRight="@+id/txt_name"
                android:layout_alignStart="@+id/txt_startime"
                android:layout_alignTop="@+id/imageView4"
                android:text="Ã‡ayyolu/ Ankara"
                android:textAppearance="@style/TextAppearance.AppCompat.Small.Inverse" />

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/txt_name"
                android:layout_alignStart="@+id/txt_name"
                android:layout_below="@+id/txt_name"
                card_view:srcCompat="@drawable/ic_timelapse_white_24dp" />

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/imageView3"
                android:layout_alignStart="@+id/imageView3"
                android:layout_below="@+id/imageView3"
                android:layout_marginTop="12dp"
                card_view:srcCompat="@drawable/ic_location_on_white_24dp" />

            <ImageView
                android:id="@+id/whatsapp"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="20dp"
                android:layout_marginRight="20dp"
                card_view:srcCompat="@drawable/whatsapp_icon" />

            <ImageView
                android:id="@+id/messenger"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignTop="@+id/whatsapp"
                android:layout_marginEnd="5dp"
                android:layout_marginRight="5dp"
                android:layout_toLeftOf="@+id/whatsapp"
                android:layout_toStartOf="@+id/whatsapp"
                card_view:srcCompat="@drawable/messenger_icon" />

            <ImageView
                android:id="@+id/mail"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignTop="@+id/messenger"
                android:layout_marginEnd="5dp"
                android:layout_marginRight="5dp"
                android:layout_toLeftOf="@+id/messenger"
                android:layout_toStartOf="@+id/messenger"
                card_view:srcCompat="@drawable/gmail_icon" />

            <ImageView
                android:id="@+id/sms"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignTop="@+id/mail"
                android:layout_marginEnd="5dp"
                android:layout_marginRight="5dp"
                android:layout_toLeftOf="@+id/mail"
                android:layout_toStartOf="@+id/mail"
                card_view:srcCompat="@drawable/sms_icon" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>

</RelativeLayout>