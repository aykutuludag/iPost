<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="fill_parent"
        android:layout_height="140dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        card_view:cardBackgroundColor="#fff"
        card_view:cardUseCompatPadding="true">

        <RelativeLayout
            android:id="@+id/single_event"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="#212121">

            <TextView
                android:id="@+id/contact_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"
                android:gravity="center"
                android:maxLength="23"
                android:text="Remin's Birthday"
                android:textAppearance="@style/TextAppearance.AppCompat.Large.Inverse" />

            <TextView
                android:id="@+id/txt_startime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="8dp"
                android:gravity="center"
                android:text="30 Eylül 2017 00:00"
                android:textAppearance="@style/TextAppearance.AppCompat.Small.Inverse" />

            <TextView
                android:id="@+id/txt_loc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="8dp"
                android:layout_marginRight="8dp"
                android:text="Ankara, Türkiye"
                android:textAppearance="@style/TextAppearance.AppCompat.Small.Inverse" />


            <ImageView
                android:id="@+id/iconTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/txt_startime"
                android:layout_alignLeft="@+id/txt_startime"
                android:layout_alignStart="@+id/txt_startime"
                android:layout_marginBottom="8dp"
                card_view:srcCompat="@drawable/ic_timelapse_white_24dp" />

            <ImageView
                android:id="@+id/iconLocation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/txt_loc"
                android:layout_alignEnd="@+id/txt_loc"
                android:layout_alignRight="@+id/txt_loc"
                android:layout_marginBottom="8dp"
                card_view:srcCompat="@drawable/ic_location" />

            <RelativeLayout
                android:id="@+id/EventOptions"
                android:layout_width="wrap_content"

                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/iconLocation"
                android:layout_alignRight="@+id/iconLocation"
                android:layout_alignTop="@+id/contact_name">

                <ImageView
                    android:id="@+id/options_sms"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_centerVertical="true"
                    android:alpha="0.5"
                    card_view:srcCompat="@drawable/sms_icon" />

                <ImageView
                    android:id="@+id/options_whatsapp"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_alignTop="@+id/options_messenger"
                    android:layout_marginLeft="5dp"
                    android:layout_toEndOf="@+id/options_messenger"
                    android:layout_toRightOf="@+id/options_messenger"
                    android:alpha="0.5"
                    card_view:srcCompat="@drawable/whatsapp_icon" />

                <ImageView
                    android:id="@+id/options_messenger"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_alignTop="@+id/options_mail"
                    android:layout_marginLeft="5dp"
                    android:layout_toEndOf="@+id/options_mail"
                    android:layout_toRightOf="@+id/options_mail"
                    android:alpha="0.5"
                    card_view:srcCompat="@drawable/messenger_icon" />

                <ImageView
                    android:id="@+id/options_mail"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_alignTop="@+id/options_sms"
                    android:layout_marginLeft="5dp"
                    android:layout_toEndOf="@+id/options_sms"
                    android:layout_toRightOf="@+id/options_sms"
                    android:alpha="0.5"
                    card_view:srcCompat="@drawable/gmail_icon" />
            </RelativeLayout>

        </RelativeLayout>
    </android.support.v7.widget.CardView>

</RelativeLayout>