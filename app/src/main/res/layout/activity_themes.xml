            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="16dp"
            android:src="@drawable/turuncuprofil"
            app:civ_border_color="#C87527"
            app:civ_border_width="2dp" />

        <TextView
            android:id="@+id/turuncu_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/turuncu_picture"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="4dp"
            android:paddingTop="5dp"
            android:text="Android Studio"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textColor="#000" />

        <TextView
            android:id="@+id/turuncu_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/turuncu_name"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="2dp"
            android:text="android.studio@android.com"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:textColor="#000" />

        <TextView
            android:id="@+id/turuncu_theme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="Theme: Orange"
            android:textAppearance="@style/TextAppearance.AppCompat.Large" />

        <Button
            android:id="@+id/turuncu_buy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/turuncu_theme"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="19dp"
            android:background="#00801E"
            android:text="0.99 $"
            android:textColor="#fff" />
    </RelativeLayout>

