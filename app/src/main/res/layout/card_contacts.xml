<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="fill_parent"
        android:layout_height="150dp"
        card_view:cardBackgroundColor="#fff"
        card_view:cardUseCompatPadding="true">

        <RelativeLayout
            android:id="@+id/top_layout"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <ImageView
                android:id="@+id/img_background"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:adjustViewBounds="true"
                android:background="#00801e"
                android:scaleType="centerCrop" />

            <TextView
                android:id="@+id/txt_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_margin="5dp"
                android:gravity="center"
                android:text="Name - Surname"
                android:textAppearance="@style/TextAppearance.AppCompat.Title.Inverse" />

            <ImageView
                android:id="@+id/profilePhoto"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_margin="5dp"
                card_view:srcCompat="@drawable/com_facebook_profile_picture_blank_portrait" />

            <ImageView
                android:id="@+id/whatsapp"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignTop="@+id/messenger"
                android:layout_marginLeft="5dp"
                android:layout_toEndOf="@+id/messenger"
                android:layout_toRightOf="@+id/messenger"
                android:visibility="invisible"
                card_view:srcCompat="@drawable/whatsapp_icon" />

            <ImageView
                android:id="@+id/messenger"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignTop="@+id/mail"
                android:layout_marginLeft="5dp"
                android:layout_toEndOf="@+id/mail"
                android:layout_toRightOf="@+id/mail"
                android:visibility="invisible"
                card_view:srcCompat="@drawable/messenger_icon" />

            <ImageView
                android:id="@+id/mail"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignTop="@+id/sms"
                android:layout_marginLeft="5dp"
                android:layout_toEndOf="@+id/sms"
                android:layout_toRightOf="@+id/sms"
                android:visibility="invisible"
                card_view:srcCompat="@drawable/gmail_icon" />

            <ImageView
                android:id="@+id/sms"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignLeft="@+id/txt_name"
                android:layout_alignStart="@+id/txt_name"
                android:layout_centerVertical="true"
                card_view:srcCompat="@drawable/sms_icon" />

        </RelativeLayout>
    </android.support.v7.widget.CardView>

</RelativeLayout>